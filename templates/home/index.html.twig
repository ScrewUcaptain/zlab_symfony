{% extends 'base.html.twig' %}

{% block title %}LAB MUSIK{% endblock %}

{% block body %}

	<section class="intro">
		<h3 class="intro-title">Welcome to Z-lab !</h3>
		<p class="intro-text">
			<span class="intro-brand">Z-Lab</span> is a sharing platform for musical playlists. <br>
			You can discover playlist from the community, <br>
			create your own playlist, share it or keep it for yourself. <br>
			Have fun !
		</p>
		<br>
		<h6 onclick="displayTrends()">Checkout the trending playlist</h6>
		
	</section>

	<section class="trends" id="trends">
		<h3 class="trends-title">Top Playlist</h3>                        
		<div class="trends-list">
			{% for playlist in playlists %}
				<div class="trends-item">
					<a href="{{path('playlist', {playlist: playlist.id} ) }}">
						<div class="item-top">
						<div class="list-ranking">{{loop.index}}.</div>
						<div class="pl-image">
						{% if playlist.cover is not null %}
							<img src="{{asset('images/')}}{{playlist.cover}}" alt="">
						{% else %}
							<img src="{{asset('images/none.png')}}" alt="">
						{% endif %}
						</div>
					</div>
					<div class="item-mid">
						<p class="pl-name">{{playlist.name}}</p>
					</div>
					<div class="item-bot">
						<div class="pl-likes">
						
							<box-icon name='star' type='solid' color='#fbd902' style="margin-right: 0.25rem"></box-icon> {{playlist.likes}}
						</div>
						<div class="pl-play">
							<img src="data:image/png;base64,"/>
						</div>
					</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</section>                            
{% endblock %}
