{% extends "dashboard/index.html.twig" %}

{% block body %}
    <section class="db-users">
    <h1>Songs</h1>
    <table class="customTable">
        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>Artist name</th>
                <th>Year of parution</th>
                <th>Url Youtube</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for song in songs %}
                <tr>
                    <td>{{song.id}}</td>
                    <td>{{song.name}}</td>
                    <td>{{song.artist}}</td>
                    <td>{{song.year}}</td>
                    <td>{{song.url}}</td>
                    <td>
                        <box-icon name='trash-alt' type='solid' color='#f33c3c' ></box-icon>
                        <box-icon name='edit-alt' type='solid' color='#00F' ></box-icon>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}