{% extends "dashboard/index.html.twig" %}

{% block body %}
    <section class="db-users">
    <h1>Playlists</h1>
    <table class="customTable">
        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>Author</th>
                <th>Privacy</th>
                <th>Likes</th>
                <th>Cover</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for playlist in playlists %}
                <tr>
                    <td> {{playlist.id}} </td>
                    <td> {{playlist.name}} </td>
                    <td> {{playlist.author.firstname}} - {{playlist.author.lastname}} </td>
                    <td> 
                        {% if playlist.isPublic %}
                            Public
                        {% else %}
                            Private
                        {% endif %}
                    </td>
                    <td>{{playlist.likes}}</td>
                    <td>{% if playlist.cover is same as null %}
                        No Cover
                        {% else %}
                        {# insert image tag #}
                            {{playlist.cover}}
                        {% endif %}
                     </td>
                    <td> {{playlist.createdAt|date("m/d/Y")}} </td>
                    <td>
                    {{playlist.updatedAt|date("m/d/Y")}}
                    </td>
                    
                    <td>
                        <box-icon name='trash-alt' type='solid' color='#f33c3c' ></box-icon>
                        <box-icon name='edit-alt' type='solid' color='#00F' ></box-icon>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}